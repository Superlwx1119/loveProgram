/* miniprogram/pages/whichEat/whichEat.wxss */
page{
  height: 100%;
  overflow: hidden;
}
.contain{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.contain image{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.bigCircle{
  position: absolute;
  background: white;
  width: 600rpx;
  height: 600rpx;
  top:50%;
  overflow: hidden;
  left:50%;
  border-radius: 50%;
  margin-left: -300rpx;
  margin-top: -300rpx;
  border: 1px solid rgba(0,0,0,.5);
  box-shadow: 0px 0px 5px;
}
.canvasItem{
  width: 600rpx;
  height: 600rpx;
}
.circle{
  position: fixed;
  background: red;
  width: 140rpx;
  height: 140rpx;
  top:50%;
  left:50%;
  font-size: 14px;
  border-radius: 50%;
  margin-left: -70rpx;
  margin-top: -70rpx;
}
.circleItem{
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  width: 0rpx;
  height: 0rpx;
  border: 300rpx solid transparent;
  border-left-width: 0px;
  /* background-color: #A52A2A; */
  border-image: '../../images/huoguo.jpg';
  /* border-right: 600rpx solid #A52A2A; */
  z-index: 9999;
  top: 0%;
  left: 50%;
  /* transform-origin:left center;
  transform: rotateZ(60deg) */
}
.triangle{
  width: 0;
  height: 0;
  border: 16rpx solid transparent;
  border-top-width: 0;
  border-bottom:200rpx solid red;
  position: absolute;
  left: 50%;
  z-index: 1;
  bottom: 50%;
  margin-left: -12rpx;
  /* margin-bottom: 70rpx; */
  transform-origin: center bottom;
  transform: rotateZ(90deg)
}
.start{
  width: 140rpx;
  height: 140rpx;
  z-index: 9999;
  border-radius: 50%;
  background: red;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  position: absolute;
}
.whichFood{
  z-index: 999;
  position: fixed;
  top: 15%;
  width: 100%;
  text-align: center;

}