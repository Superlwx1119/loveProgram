/* miniprogram/pages/shoppingCar/shoppingCar.wxss */
page{
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
}
.content{
  flex: 1;
  overflow: hidden;
  height: 100%;
}
.goodsList{
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
  /* padding: 30rpx; */
  /* border: 1px solid #eee; */
}
.edit{
  flex: 0 0 40rpx;
  width: 100%;
  text-align: right;
}
.edit text{
  width: 100%;
  font-size: 24rpx;
  padding-right: 40rpx;
} 
.listItem{
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 20rpx;
  
}
.goodImg{
  width: 230rpx;
  height: 200rpx;
  margin-left: 20rpx;
}
.checkbox2{
  width: 45rpx;
  height: 45rpx;
}
.checkbox {
  width: 45rpx;
  height: 45rpx;
  opacity: 0;
}
.detali{
  width: 300rpx;
  display: flex;
  justify-content: space-between;
  padding-left: 80rpx;
}
.btn{
  display: flex;
  text-align: center;
}
/* .btn text{
  padding: 0 15rpx;
  line-height: 35rpx;
} */
.btn text{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30rpx;
  line-height: 30rpx;
  height: 30rpx;
  font-size: 24rpx;
}
.btn text:first-child{
  border: 1px solid red;
  border-radius: 50%;
  color: red;
  /* font-weight: bold; */
}
.btn text:last-child{
  border: 1px solid red;
  background: red;
  border-radius: 50%;
  color: white;
  /* font-weight: bold; */
}
.btn_num{
  width: 80rpx !important;
  font-size: 32rpx !important;
  line-height: 32rpx !important;
  text-align: center;
}
.submit{
  flex: 0 0 100rpx;
  border-top: 1px solid #e5e5e5;
  height: 100rpx;
  display: flex;
  padding-left: 30rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}
.submit image{
  vertical-align: middle;
}
.choose text{
  padding-left: 12rpx;
}
.confirm{
  display: flex;
  align-items: center;
}
.confirm view:first-child{
  margin-right: 100rpx;
}
.confirm view:last-child{
  width: 120rpx;
  background: red;
  color: white;
  line-height: 100rpx;
  text-align: center;
  height: 100rpx;
  font-size: 32rpx;
}


